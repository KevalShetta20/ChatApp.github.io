<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="100dp"
    android:padding="10dp"
    android:background="@drawable/receiver_messages_layout"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/lnameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:textColor="#cc0066"/>

    <TextView
        android:id="@+id/lmessageTv"
        android:layout_below="@id/lnameTv"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="he message"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/ltimeTv"
        android:layout_below="@id/lmessageTv"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:text="Date and time"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>